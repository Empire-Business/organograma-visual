# GitHub
GITHUB_CLIENT_ID=xxx
GITHUB_CLIENT_SECRET=xxx

# ============================================
# EMAIL
# ============================================
# Resend
RESEND_API_KEY=re_xxx

# SendGrid
SENDGRID_API_KEY=SG.xxx
SENDGRID_FROM_EMAIL=noreply@meuapp.com

# ============================================
# PAGAMENTOS
# ============================================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ============================================
# STORAGE
# ============================================
# AWS S3
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=my-bucket

# Cloudflare R2
R2_ACCESS_KEY_ID=xxx
R2_SECRET_ACCESS_KEY=xxx
R2_BUCKET=my-bucket
R2_ACCOUNT_ID=xxx

# ============================================
# MONITORAMENTO
# ============================================
# Sentry
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=xxx

# ============================================
# ANALYTICS
# ============================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=meuapp.com

# ============================================
# INTEGRAÇÕES
# ============================================
# OpenAI
OPENAI_API_KEY=sk-xxx

# Anthropic
ANTHROPIC_API_KEY=sk-ant-xxx

# ============================================
# DEPLOY
# ============================================
# Vercel
VERCEL_TOKEN=xxx
VERCEL_ORG_ID=xxx
VERCEL_PROJECT_ID=xxx

# ============================================
# GitHub
# ============================================
GITHUB_TOKEN=ghp_xxx
GITHUB_WEBHOOK_SECRET=xxx

# ============================================
# SLACK (Notificações)
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# ============================================
# REDIS (Cache/Queue)
# ============================================
REDIS_URL=redis://localhost:6379
# Upstash
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx

# ============================================
# DESENVOLVIMENTO
# ============================================
# Ativar modo de debug
DEBUG=false

# Log level
LOG_LEVEL=info

# Claude Code - Agent Teams (experimental)
# Necessário para habilitar subagentes via Task tool
CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS=1

# ============================================
# NOTAS
# ============================================
# - Variáveis com NEXT_PUBLIC_ são expostas no navegador
# - Variáveis sem prefixo são só server-side
# - Nunca coloque senhas/chaves em variáveis NEXT_PUBLIC_
# - Use .env.local para desenvolvimento local
# - Use .env.production para produção (no servidor/CI)
